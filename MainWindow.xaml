<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GGJ2021"
        mc:Ignorable="d"
        Title="MainWindow" WindowState="Maximized" WindowStyle="None" Background="DarkGray">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="25" x:Name="SetterSize" />
            <Setter Property="FontFamily" Value="SimSun" />
        </Style>
    </Window.Resources>
    <Grid Background="Black" x:Name="PanMain">
        <Grid.Effect>
            <DropShadowEffect Color="White" Opacity="0.5" ShadowDepth="1" BlurRadius="3" />
        </Grid.Effect>
        <TextBlock Name="t" />
        <TextBlock Name="TextInput" VerticalAlignment="Bottom" Tag="" />
    </Grid>
</Window>
